    "version": "0.2.0",
    "compounds": [
        {
            "name": "sim_all",
            "configurations": ["saw_service", "client_all"]
        },
        {
            "name": "sim_happy",
            "configurations": ["saw_service", "client_happy"]
        }
    ],
    "configurations": [
        {
            "name": "saw_service",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/router/src/saw_service.ts",
            "outFiles": ["${workspaceFolder}/router/deploy/etc/saw/service/**/*.js"],
            "env": {
                "SAW_DEBUG": "VSC",
                "SAW_LOG_LEVEL": "DEBUG"
            }
        },
        {
            "name": "client_all",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}\\utils\\simulations.ts",
            "outFiles": ["${workspaceFolder}/utils/build/**/*.js"],
            "args": ["-s", "all", "-l", "DEBUG"]
        },
        {
            "name": "client_happy",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}\\utils\\simulations.ts",
            "outFiles": ["${workspaceFolder}/utils/build/**/*.js"],
            "args": ["-s", "happyClient", "-l", "DEBUG"]
        }
    ]
}